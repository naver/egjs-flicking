{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "tslint-consistent-codestyle",
    "tslint-eslint-rules",
    "tslint-lines-between-class-members"
  ],
  "rules": {
    "jsdoc-format": true,
    "forin": false,
    "no-console": false,
    "no-any": false,
    "variable-name": false,
    "no-bitwise": false,
    "no-empty": false,
    "indent": [true, "spaces", 2],
    "quotemark": [true, "double", "avoid-template"],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-unused-expression": false,
    "lines-between-class-members": true,
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace"],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "|//|(\\* [a-zA-z0-9@])"
      }
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "whitespace": [
      true,
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-branch",
      "check-type-operator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ],
    "interface-name": [true, "never-prefix"],
    "naming-convention": [
      true,
      { "type": "default", "format": "camelCase", "leadingUnderscore": "forbid", "trailingUnderscore": "forbid" },
      { "type": "variable", "modifiers": ["export", "const"], "format": ["camelCase", "UPPER_CASE"] },
      { "type": "member", "format": "camelCase" },
      { "type": "member", "modifiers": ["static"], "format": ["camelCase", "UPPER_CASE"] },
      { "type": "type", "format": "PascalCase" }
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*"
    ]
  }
}
