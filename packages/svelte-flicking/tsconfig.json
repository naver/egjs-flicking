{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNEXT",
    "noImplicitAny": false,
    "strict": true,
    "allowJs": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "types": ["svelte"],
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
