{
  "extends": "./tsconfig",
  "compilerOptions": {
    "removeComments": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "declaration",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
