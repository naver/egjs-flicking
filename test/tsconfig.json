{
  "extends": "../tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "types": [
      "karma-chai",
      "mocha",
      "sinon"
    ]
  },
  "include": [
    "../src/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "../node_modules/**/*.ts"
  ]
}
