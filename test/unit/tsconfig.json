{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "types": [
      "karma-chai",
      "mocha"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../src/*"]
    },
  },
  "include": [
    "../../src/**/*.ts",
    "./**/*.ts"
  ],
  "exclude": [
    "../../node_modules/**/*.ts"
  ]
}
