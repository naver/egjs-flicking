{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "target": "ES5",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "karma-chai",
      "mocha",
      "react",
      "vue"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../src/*"],
      "~egjs/react-flicking": ["../../packages/react-flicking/src/react-flicking/index.ts"],
      "~egjs/react-flicking/*": ["../../packages/react-flicking/src/react-flicking/*"],
      "~egjs/vue-flicking": ["../../packages/vue-flicking/src/index.ts"],
      "~egjs/vue-flicking/*": ["../../packages/vue-flicking/src/*"]
    }
  },
  "include": [
    "../../src/**/*.ts",
    "../../packages/react-flicking/src/react-flicking/**/*.ts",
    "../../packages/react-flicking/src/react-flicking/**/*.tsx",
    "../../packages/vue-flicking/src/**/*.ts",
    "../../packages/ngx-flicking/projects/ngx-flicking/src/**/*.ts",
    "./dist/**/*",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "libs",
    "node_modules/**/*"
  ]
}
