{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "",
  "projects": {
    "react-component-library": {
      "root": "react-component-library",
      "sourceRoot": "react-component-library/src",
      "projectType": "library",
      "prefix": "hybrid",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.lib.json",
            "project": "react-component-library/ng-package.json"
          }
        }
      }
    },
    "react-ng-wrapper": {
      "root": "react-ng-wrapper",
      "sourceRoot": "react-ng-wrapper/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.lib.json",
            "project": "react-ng-wrapper/ng-package.json"
          }
        }
      }
    },
    "react-wrappers": {
      "root": "react-wrappers",
      "sourceRoot": "react-wrappers/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.lib.json",
            "project": "react-wrappers/ng-package.json"
          }
        }
      }
    },
    "angular-component-library": {
      "projectType": "library",
      "root": "angular-component-library",
      "sourceRoot": "angular-component-library/src",
      "prefix": "hybrid",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "tsconfig.lib.json",
            "project": "angular-component-library/ng-package.json"
          }
        }
      },
      "schematics": {}
    }
  },
  "cli": {
    "warnings": {
      "typescriptMismatch": false,
      "versionMismatch": false
    },
    "defaultCollection": "@nrwl/angular",
    "packageManager": "yarn"
  },
  "schematics": {
    "@nrwl/schematics:application": {
      "style": "scss",
      "framework": "react"
    },
    "@nrwl/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "babel": true
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint"
      }
    },
    "@nrwl/next": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/web": {
      "application": {
        "linter": "eslint"
      }
    },
    "@nrwl/schematics:library": {
      "style": "scss"
    }
  },
  "defaultProject": "react-app"
}
