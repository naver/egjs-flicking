{
  "name": "cfc",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "npm run install:all",
    "install:all": "npm-run-all --parallel install:angular install:react install:preact install:vue install:vue3 install:svelte",
    "install:angular": "npm install --prefix framework/angular",
    "install:react": "npm install --prefix framework/react",
    "install:preact": "npm install --prefix framework/preact",
    "install:vue": "npm install --prefix framework/vue",
    "install:vue3": "npm install --prefix framework/vue3",
    "install:svelte": "npm install --prefix framework/svelte",
    "test": "npm run test:all",
    "coverage": "jest --coverage --config=\"./jest.config.js\" --collectCoverageFrom=\"<rootDir>/lib/@egjs/**/*\"",
    "postcoverage": "node ./replace-coverage",
    "test:all": "jest --config=\"./jest.config.js\"",
    "test:vanilla": "npm test --prefix framework/vanilla",
    "test:angular": "npm test --prefix framework/angular",
    "test:react": "npm test --prefix framework/react",
    "test:preact": "npm test --prefix framework/preact",
    "test:vue": "npm test --prefix framework/vue",
    "test:vue3": "npm test --prefix framework/vue3",
    "test:svelte": "npm test --prefix framework/svelte"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-proposal-decorators": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^12.11.1",
    "@types/react": "16.8.17",
    "@types/react-dom": "16.8.4",
    "babel-jest": "^27.3.1",
    "jest": "^27.3.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "replace-in-file": "^6.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "~4.2.4"
  }
}
