{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./out-tsc/spec",
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@egjs/flicking": ["./lib/@egjs/flicking/index.ts"],
      "@egjs/react-flicking": ["./lib/@egjs/react-flicking/index.ts"],
      "@egjs/vue-flicking": ["./lib/@egjs/vue-flicking/index.ts"],
      "@egjs/ngx-flicking": ["./lib/@egjs/ngx-flicking/public-api.ts"],
      "@egjs/svelte-flicking": ["./lib/@egjs/svelte-flicking/index.js"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "./src/**/*.spec.ts",
    "./src/**/*.spec.tsx"
  ]
}
